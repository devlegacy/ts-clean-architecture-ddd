{
  "name": "ts-clean-architecture",
  "version": "0.0.1",
  "description": "",
  "main": "index.js",
  "scripts": {
    "prebuild": "npm run build:clean",
    "prepare": "husky install",
    "build": "npm run build:tsc",
    "build:clean": "rm -f tsconfig.build.tsbuildinfo && rm -Rf ./dist/* ; exit 0",
    "build:tsc": "tsc -p tsconfig.build.json && resolve-tspaths -p tsconfig.json -s ./src -o ./dist",
    "start": "node ./dist/infrastructure/driving-adapters/api-rest/main.js",
    "start:user:console:debug": "tsnd --project tsconfig.json --files --respawn --transpile-only --ignore-watch node_modules -r tsconfig-paths/register --inspect -- ./src/apps/user/console/main.ts",
    "start:user:api:debug": "tsnd --project tsconfig.json --files --respawn --transpile-only --ignore-watch node_modules -r tsconfig-paths/register --inspect -- ./src/apps/user/backend/main.ts",
    "start:user:graph:debug": "tsnd --project tsconfig.json --files --respawn --transpile-only --ignore-watch node_modules -r tsconfig-paths/register --inspect -- ./src/apps/user/graphql/main.ts",
    "start:mooc:api:debug": "tsnd --project tsconfig.json --files --respawn --ignore-watch node_modules -r tsconfig-paths/register --inspect -- ./src/apps/mooc/backend/main.ts",
    "prune:mooc": "ts-prune --project tsconfig.build.json && ts-unused-exports tsconfig.build.json",
    "prune:mooc:filter": "ts-prune --project tsconfig.build.json | grep -v '(used in module)'",
    "test": "npm run test:unit && npm run test:features",
    "test:unit": "jest --runInBand --detectOpenHandles",
    "test:features": "npm run test:mooc:backend:features",
    "test:mooc:backend:features": "cucumber-js -p mooc_backend",
    "lint": "eslint --color ./src/**/*.ts",
    "lint:fix": "npm run lint -- --fix",
    "package:clean": "rm -Rf ./node_modules && rm -f ./package-lock.json && rm -f ./yarn.lock",
    "package:update": "ncu -u && npm install && npm audit fix",
    "package:update:legacy": "ncu -u && npm install --legacy-peer-deps && npm audit fix --legacy-peer-deps",
    "package:refresh": "npm run package:clean && npm run package:update",
    "package:refresh:legacy": "npm run package:clean && npm run package:update:legacy"
  },
  "keywords": [],
  "author": "Samuel R. <samuel@devexteam.com> (https://devexteam.com)",
  "license": "MIT",
  "dependencies": {
    "@fastify/compress": "^5.0.0",
    "@fastify/cookie": "^6.0.0",
    "@fastify/cors": "^7.0.0",
    "@fastify/helmet": "^8.1.0",
    "@fastify/rate-limit": "^6.0.1",
    "@graphql-tools/schema": "^8.5.0",
    "ajv": "^8.11.0",
    "apollo-server-core": "^3.9.0",
    "apollo-server-fastify": "^3.9.0",
    "convict": "^6.2.3",
    "dotenv": "^16.0.1",
    "dotenv-expand": "^8.0.3",
    "env-schema": "^5.0.0",
    "fastify": "^3.29.0",
    "graphql": "^16.5.0",
    "http-errors": "^2.0.0",
    "http-status": "^1.5.2",
    "joi": "^17.6.0",
    "joi-class-decorators": "^1.0.4",
    "mongodb": "^4.7.0",
    "mongoose": "^6.4.2",
    "pino": "^8.1.0",
    "pino-pretty": "^8.1.0",
    "reflect-metadata": "^0.1.13",
    "tsyringe": "^4.7.0",
    "uuid": "^8.3.2",
    "uuid-validate": "^0.0.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@cucumber/cucumber": "^8.4.0",
    "@faker-js/faker": "^7.3.0",
    "@types/convict": "^6.1.1",
    "@types/http-errors": "^1.8.2",
    "@types/jest": "^28.1.4",
    "@types/node": "^18.0.1",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^8.3.4",
    "@types/uuid-validate": "^0.0.1",
    "@typescript-eslint/eslint-plugin": "^5.30.4",
    "@typescript-eslint/parser": "^5.30.4",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.19.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^26.5.3",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "husky": "^8.0.1",
    "jest": "^28.1.2",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "resolve-tspaths": "^0.6.0",
    "supertest": "^6.2.4",
    "ts-jest": "^28.0.5",
    "ts-node": "^10.8.2",
    "ts-node-dev": "^2.0.0",
    "ts-prune": "^0.10.3",
    "ts-unused-exports": "^8.0.0",
    "tsconfig-paths": "^4.0.0",
    "tslib": "^2.4.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.7.4"
  },
  "optionalDependencies": {
    "npm-check-updates": "^15.0.2"
  },
  "engines": {
    "node": ">=16.15.0 <=18.1.0",
    "npm": ">=8.12.1"
  }
}
